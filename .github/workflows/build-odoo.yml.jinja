{%- import "_macros.jinja" as macros -%}
name: Build and Push Odoo Image

on:
  push:
    branches:
      - main
    paths:
      - "odoo/**"
  pull_request:
    branches:
      - main
    paths:
      - "odoo/**"
  workflow_dispatch:

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: unifica-ai/aly-suite-v{{ macros.version_major(odoo_version) }}-{{ stack_name }}

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Log in to Container Registry
        uses: docker/login-action@v3
        with:
          registry: {% raw %}${{ env.REGISTRY }}{% endraw %}
          username: {% raw %}${{ github.actor }}{% endraw %}
          password: {% raw %}${{ secrets.GITHUB_TOKEN }}{% endraw %}

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Extract metadata
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: {% raw %}${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}{% endraw %}
          tags: |
            # Branch name (for all branches)
            type=ref,event=branch
            # PR number (for pull requests)
            type=ref,event=pr
            # Git commit SHA (short)
            type=sha,format=short
            # Date-based versioning
            type=schedule,pattern={% raw %}{{date 'YYYYMMDD'}}{% endraw %}
            type=schedule,pattern={% raw %}{{date 'YYYYMMDD-HHmm'}}{% endraw %}
            # Static tags for main branch
            type=raw,value=latest,enable={% raw %}{{is_default_branch}}{% endraw %}

      - name: Set up SSH keys
        run: |
          mkdir -p ./odoo/custom/ssh/
          echo {% raw %}$"{{ secrets.ALY_WEB_2509 }}"{% endraw %} > ./odoo/custom/ssh/aly-web-2509
          chmod 600 ./odoo/custom/ssh/aly-web-2509

      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: ./odoo
          platforms: linux/amd64,linux/arm64
          push: true
          tags: {% raw %}${{ steps.meta.outputs.tags }}{% endraw %}
          labels: {% raw %}${{ steps.meta.outputs.labels }}{% endraw %}
          cache-from: type=gha
          cache-to: type=gha,mode=max
          build-args: |
            UID=1000
            GID=1000
            DB_VERSION=16
            ODOO_VERSION=16.0
